<!DOCTYPE html>
<html>
<head>
  <title>JEOPARDY CLUE</title>
  <style type="text/css">

    @font-face {
      font-family: 'Korinna-Bold';
      src: url('/assets/fonts/Korinna-Bold.woff') format('woff');
      font-weight: normal;
      font-style: normal;
    }

    @font-face {
      font-family: 'Korinna-Regular';
      src: url('/assets/fonts/Korinna-Regular.woff') format('woff');
      font-weight: normal;
      font-style: normal;
    }

    html {
      height: 100%;
    }
    body {
      background: #26307f;
      height: 100%;
      padding: 0;
      margin: 0;
    }

    .clue-container {
      height: 100%;
      text-align: center;
    }

    .clue {
      color: white;
      text-shadow: 3px 3px 3px rgba(0, 0, 0, 0.6);
      text-transform: uppercase;
      font-family: "Korinna-Bold", serif;
      letter-spacing: 1px;
      font-size: 40px;
      width: 600px;
      margin: 0 auto;
      position: absolute;
      font-weight: bold;
      top: 50%;
      left: 50%;
      white-space: pre-line;
      overflow: hidden;
      text-overflow: ellipsis;
      -webkit-transform: translateX(-50%) translateY(-50%);
    }

    .extra {
      color: white;
      opacity: 0.2;
      font-size: 35px;
      margin: 30px auto;
      text-transform: uppercase;
      font-family: "Korinna-Regular", serif;
      width: 600px;
    }

    .full-width {
      display: table;
      width: 100%;
    }
  </style>
</head>
<body>

  <!-- Render at 720x420 -->

  <div class="full-width">
    <div class="clue-container">
      {?extra}
        <div class="extra">
          {extra}
        </div>
      {/extra}
      <div class="clue">
        {data}
      </div>
    </div>
  </div>
</body>
</html>
